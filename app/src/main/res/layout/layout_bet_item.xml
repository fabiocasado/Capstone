<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/Container.FullWidth"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_title"
            style="@style/Text.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="@integer/input_single_line"
            tools:text="Bet # 1"/>

        <ImageView
            android:id="@+id/imageView_favorite"
            android:layout_width="@dimen/item_layout_icon_medium"
            android:layout_height="@dimen/item_layout_icon_medium"
            android:scaleType="fitCenter"
            android:tint="@color/colorAccent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_star_white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_description"
        style="@style/Text.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="@integer/input_max_lines_list_item"
        tools:text="Description for Bet # 1 that will explain what it is about"/>
</LinearLayout>
