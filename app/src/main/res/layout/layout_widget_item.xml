<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget_item"
              style="@style/Container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title"
        style="@style/Text.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="@integer/input_single_line"
        android:textColor="@android:color/primary_text_light"
        tools:text="Bet # 1"/>

    <TextView
        android:id="@+id/textView_description"
        style="@style/Text.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="@integer/input_max_lines_list_item"
        android:textColor="@android:color/secondary_text_light"
        tools:text="Description for Bet # 1 that will explain what it is about"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/container_horizontal_margin"
        android:layout_marginRight="@dimen/container_horizontal_margin"
        android:layout_marginTop="@dimen/container_horizontal_margin"
        android:background="@color/divider_light"/>

</LinearLayout>