<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/button_color</item>
    </style>

    <style name="Container" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/container_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/container_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/container_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/container_vertical_margin</item>
    </style>

    <style name="Input.Title" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Input.Body" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="Input.Body.Multiline" parent="Input.Body">
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:maxLines">@integer/input_max_lines</item>
    </style>

    <style name="Text.Small" parent="TextAppearance.AppCompat.Small">
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Medium">
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat.Large">
    </style>

    <style name="Text.Label.Small" parent="Text.Small">
        <item name="android:textColor">@color/labelTextColor</item>
    </style>
</resources>
